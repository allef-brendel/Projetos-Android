<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.macaxeiratec.helper">

    <uses-permission android:name="android.permission.INTERNET">
        true</uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="br.com.macaxeiratec.activity.ActivityLogin"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="br.com.macaxeiratec.activity.MainActivity" />

        <activity
            android:name="br.com.macaxeiratec.activity.CadastroActivity"
            android:parentActivityName="br.com.macaxeiratec.activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.macaxeiratec.activity.MainActivity">
            </meta-data>
        </activity>


        <activity android:name="br.com.macaxeiratec.activity.ConversaActivity"
            android:parentActivityName="br.com.macaxeiratec.activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.macaxeiratec.activity.MainActivity">
            </meta-data>
        </activity>
    </application>

</manifest>